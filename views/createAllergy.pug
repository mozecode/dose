extends index.pug

block content
    if messages && messages.length
        h2 #{messages}
    div.allergy
        form(method="POST", action='/allergies')
            h3 Please enter any drug allergy you have, one at a time:
            input(type="text", placeholder="Enter name of drug" name="drug_name", required=true)
            button(type="submit" class="submitBtn" ) Submit