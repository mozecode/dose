extends index.pug

block content
  .welcome-text
    if messages.registerMsg
      h1= messages.registerMsg
    else
      h1 Welcome back, #{session.passport.user.first_name}
      br
      h2 What would you like to do?
  .row
    .iconContainer.centerText.col-md-6.col-lg-3
      a(href="/prescriptions/create")
        h3 Add a Prescription
        i(class="menuIcon fa fa-plus-circle" aria-hidden="true")
    .iconContainer.centerText.col-md-6.col-lg-3
      a(href="/prescriptions/update")
        h3 Update a Prescription
        i(class="menuIcon fa fa-pencil" aria-hidden="false")
    .iconContainer.centerText.col-md-6.col-lg-3
      a(href="/prescriptions/user/"+session.passport.user.id)
        h3 See a List of my Prescriptions
        i(class="menuIcon fa fa-eye" aria-hidden="false")
    .iconContainer.centerText.col-md-6.col-lg-3
      a(href="/prescriptions/reminders")
        h3 Set a Reminder
        i(class="menuIcon fa fa-clock-o" aria-hidden="false")
